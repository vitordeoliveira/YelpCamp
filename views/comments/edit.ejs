<% include ../partials/header%>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin:25px auto;">
            
            <h1 style="text-align: center; font-size:28px;">Edit <%= campground.name %></h1>
            <form action="/campgrounds/<%= campground._id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit!</button>
                </div>
                
            </form>
            
            <a href="/campgrounds/<%= campground._id%>">Back!</a>
        </div>
        
    </div>

</div>

<% include ../partials/footer%>