<% include ../partials/header%>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin:25px auto;">
            
            <h1 style="text-align: center; font-size:28px;">Create a New Campground!</h1>
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name" Required>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01" Required>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="image"placeholder="image url" Required>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="description"placeholder="description" Required>
                </div>
                
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit!</button>
                </div>
                
            </form>
            
            <a href="/campgrounds">Back!</a>
        </div>

        
        
    </div>

</div>

<% include ../partials/footer%>